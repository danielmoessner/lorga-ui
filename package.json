{
  "name": "lorga-ui",
  "description": "Reusable components for your Vue3 frontend.",
  "version": "2.0.1",
  "author": "Daniel MÃ¶ssner",
  "homepage": "https://github.com/danielmoessner/lorga-ui#readme",
  "main": "dist/umd.js",
  "module": "dist/es.js",
  "typings": "dist/types/index.d.ts",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "vite build && vue-tsc --emitDeclarationOnly && mv dist/src dist/types && cp src/theme.css dist/theme.css",
    "publish-to-npm": "vitest run && npm run build && npm version patch && npm publish",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "test": "vitest"
  },
  "exports": {
    ".": {
      "import": "./dist/es.js",
      "types": "./dist/types/index.d.ts",
      "require": "./dist/umd.js"
    },
    "./style.css": "./dist/style.css",
    "./theme.css": "./dist/theme.css"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danielmoessner/lorga-ui.git"
  },
  "bugs": {
    "url": "https://github.com/danielmoessner/lorga-ui/issues"
  },
  "peerDependencies": {
    "@headlessui/vue": "1.x",
    "@heroicons/vue": "2.x",
    "@tailwindcss/typography": "0.x",
    "vue": ">=3.4",
    "tailwindcss": "4.x"
  },
  "devDependencies": {
    "@types/jest": "==30.*",
    "vue-router": "4.x",
    "@tailwindcss/vite": "4.x",
    "@types/node": "==24.*",
    "@typescript-eslint/eslint-plugin": "==8.*",
    "@vitejs/plugin-vue": "==5.*",
    "@vue/test-utils": "==2.*",
    "autoprefixer": "==10.*",
    "eslint": "==9.*",
    "eslint-config-prettier": "==10.*",
    "eslint-plugin-prettier": "==5.*",
    "eslint-plugin-vue": "==10.*",
    "jsdom": "==26.*",
    "nprogress": "==0.*",
    "rollup-plugin-visualizer": "==6.*",
    "typescript": "==5.*",
    "typescript-eslint": "^8.26.0",
    "vite": "==6.*",
    "vite-bundle-visualizer": "==1.*",
    "vitepress": "==1.*",
    "vitest": "==3.*",
    "vue-tsc": "==3.*"
  },
  "type": "module"
}
